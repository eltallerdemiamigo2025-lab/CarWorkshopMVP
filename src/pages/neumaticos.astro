import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import SelectorMarcas from '../components/sections/SelectorMarcas.astro';
import ServicioCompleto from '../components/sections/ServicioCompleto.astro';
import GarantiaSeguridad from '../components/sections/GarantiaSeguridad.astro';
import heroImageNeumaticos from '../assets/heroneumaticos.jpg';
import iconEquilibrado from "../assets/logos/equilibradoamarillo.svg";
import iconDireccion from "../assets/logos/alineado_direccionamarillo.svg";
import neumatico_medidas from "../assets/medidas_neumatico.png";
import ZoneServiceModal from '../components/ui/ZoneServiceModal';

// --- DATOS CENTRALIZADOS PARA LA PÁGINA ---

const WHATSAPP_NUMBER = "3400000001";

const socialProofData = {
    rating: 4.6,
    reviewCount: 1000
};

const heroData = {
    /*title: "Cambio de Neumáticos a Domicilio en Madrid: <span>Recogemos, Montamos y Entregamos</span>",*/
    title: "<span>Recogemos, Montamos y Entregamos</span>",
    subtitle: "Ahorra tiempo y evita las esperas en el taller. Pide tus neumáticos nuevos y nuestro equipo de profesionales se encarga de todo. Tu coche, listo para rodar, sin moverte de casa.",
    image: heroImageNeumaticos,
    imageAlt: "Servicio profesional de montaje de neumáticos a domicilio en la Comunidad de Madrid"
};

const servicioIncluidoItems = [
    { icon: 'bxs-car-mechanic', title: 'Montaje y Desmontaje', description: 'Retiramos tus neumáticos antiguos e instalamos los nuevos con maquinaria de última generación.' },
    { icon: iconEquilibrado, title: 'Equilibrado de Ruedas', description: 'Calibramos cada rueda para eliminar vibraciones y asegurar una conducción suave y segura.' },
    { icon: iconDireccion, title: 'Alineado de Dirección', description: 'Ajustamos la geometría de la dirección (paralelo) para evitar desgastes irregulares y que el volante esté recto.' },
