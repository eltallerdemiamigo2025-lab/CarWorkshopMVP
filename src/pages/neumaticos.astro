    { name: 'Yokohama', logo: 'yokohama.svg', description: 'Especialistas en neumáticos de alto rendimiento para una respuesta superior.' },
];

const marcasConfianza = [
    { name: 'Sava', logo: 'sava.svg', description: 'Calidad europea con una excelente relación durabilidad-precio. Parte del grupo Goodyear.' },
