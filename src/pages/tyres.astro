---
import Layout from '../layouts/Layout.astro';

// Importamos las secciones que vamos a usar
import Hero from '../components/sections/Hero.astro';
import ComoFunciona from '../components/sections/ComoFunciona.astro';
import CatalogoMarcas from '../components/sections/Brandcatalog.astro';
import ConfianzaOfertas from '../components/sections/Trustoffers.astro';

// --- AQUÍ VIVEN LOS DATOS DE ESTA PÁGINA ---
// Si mañana creas `baterias.astro`, solo tienes que cambiar estos datos.

const heroData = {
    title: "Cambio de neumáticos a domicilio",
    subtitle: "Elige tus neumáticos, nosotros nos encargamos del resto. Recogemos, montamos y te devolvemos tu coche. Así de fácil.",
    // image: "/assets/hero-neumaticos.jpg" // Podrías añadir una imagen al Hero
};

const marcasPrincipales = [
    { name: 'Continental', logo: 'continental.svg' },
    { name: 'Michelin', logo: 'michelin.svg' },
    // ... más marcas
];

const marcasConfianza = [
    { name: 'Sava', logo: 'sava.svg' },
    { name: 'Autogreen', logo: 'autogreen.svg' },
];

const confianzaData = [
    { icon: 'bxs-truck', title: 'Recogida y Devolución GRATIS', text: 'En todos los pedidos de neumáticos superiores a 60€.' },
    { icon: 'bxs-gift', title: '¡Llévate un Regalo!', text: 'Con tu cambio de neumáticos, te regalamos un purificador de aire.' },
    { icon: 'bxs-star', title: '+100 Reseñas Positivas', text: 'Nuestros clientes nos avalan. Confianza y servicio garantizados.' },
];
---

<Layout 
    title="Cambio de Neumáticos a Domicilio | El Taller de mi Amigo"
    description="Servicio profesional de cambio de neumáticos con recogida y entrega en la Comunidad de Madrid. Primeras marcas: Michelin, Continental y más."
>
    <Hero title={heroData.title} subtitle={heroData.subtitle} />
    
    <ComoFunciona />

    <CatalogoMarcas
        title="Nuestro Catálogo de Marcas"
        subtitle="Trabajamos con las mejores marcas para garantizar tu seguridad."
        marcasPrincipales={marcasPrincipales}
        marcasConfianza={marcasConfianza}
    />

    <ConfianzaOfertas items={confianzaData} />

</Layout>