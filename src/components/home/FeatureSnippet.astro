---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  imageSize?: string;
}

const { title, description, imageUrl, imageSize = "w-48 sm:w-52 md:w-56" } = Astro.props;
---

<div class="flex flex-col items-center gap-3 sm:gap-4 text-center max-w-sm mx-auto p-4 sm:p-6">
  <div class="w-48 h-48 sm:w-52 sm:h-52 md:w-56 md:h-56 flex items-center justify-center">
    <img src={imageUrl} alt={title} class={`max-w-full max-h-full object-contain ${imageSize}`} />
  </div>

  <span class="text-lg sm:text-xl font-semibold">{title}</span>

  <p class="text-sm sm:text-base leading-relaxed text-gray-600">
    {description}
  </p>
</div>