---
const navLinks = [
    { href: '/', label: 'Inicio' },
    { href: '/neumaticos', label: 'Neumáticos' },
    { href: '/baterias', label: 'Baterías' },
    { href: '/filtros', label: 'Aceites y Filtros' },
];
---
<header>
    <div class="container header-container">
        <a href="/" class="logo">eltaller<span class="highlight">demiamigo</span>.com</a>

        <nav>
            <ul>
                {navLinks.map(link => (
                    <li><a href={link.href}>{link.label}</a></li>
                ))}
            </ul>
        </nav>
    </div>
</header>
<style>
    header { background-color: var(--color-surface-base); padding: 1.5rem 0; border-bottom: 1px solid var(--color-border); }
    .header-container { display: flex; justify-content: space-between; align-items: center; }
    .logo { font-weight: 700; font-size: 1.25rem; text-decoration: none; color: var(--color-text-base); }
    .logo .highlight { color: var(--color-primary); }
    nav ul { list-style: none; display: flex; gap: 2rem; }
    nav a { text-decoration: none; color: var(--color-text-muted); font-weight: 600; transition: color 0.2s; }
    nav a:hover { color: var(--color-primary); }
</style>