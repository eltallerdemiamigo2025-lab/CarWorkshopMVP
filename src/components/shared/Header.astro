---
const navLinks = [
    { href: '/', label: 'Inicio' },
    { href: '/neumaticos', label: 'Neumáticos' },
    { href: '/filtros', label: 'Aceites y Filtros' },
    { href: '/baterias', label:'Baterías' },
    { href: '/frenos', label: 'Frenos' },
    { href: '/mecanica', label: 'Mecánica' },
];
---
<header>
    <div class="container header-container">
        <a href="/" class="logo">eltaller<span class="highlight">demiamigo</span>.com</a>

        <button class="menu-toggle" aria-label="Abrir menú">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <nav class="nav-menu">
            <ul>
                {navLinks.map(link => (
                    <li><a href={link.href}>{link.label}</a></li>
                ))}
            </ul>
        </nav>
    </div>
</header>

<script is:inline>
    // Script global para el menú hamburguesa que funciona con Astro
    function initMenu() {
        const menuBtn = document.querySelector('.menu-toggle');
        const nav = document.querySelector('.nav-menu');
        
        // Limpiar event listeners anteriores
        if (menuBtn) {
            menuBtn.replaceWith(menuBtn.cloneNode(true));
        }
        
        // Obtener elementos frescos
        const newMenuBtn = document.querySelector('.menu-toggle');
        const newNav = document.querySelector('.nav-menu');
        
        // Reset estado
        if (newNav) newNav.classList.remove('active');
        if (newMenuBtn) newMenuBtn.classList.remove('active');
        
        // Función para controlar el scroll del body
        function toggleBodyScroll(disable) {
            if (disable) {
                document.body.style.overflow = 'hidden';
                document.body.style.position = 'fixed';
                document.body.style.width = '100%';
            } else {
                document.body.style.overflow = '';
                document.body.style.position = '';
                document.body.style.width = '';
            }
        }
        
        if (newMenuBtn && newNav) {
            newMenuBtn.addEventListener('click', () => {
                const isActive = newNav.classList.contains('active');
                newNav.classList.toggle('active');
                newMenuBtn.classList.toggle('active');
                
                // Controlar el scroll del body
                toggleBodyScroll(!isActive);
            });
            
            // Cerrar al hacer clic en enlaces
            const links = newNav.querySelectorAll('a');
            links.forEach(link => {
                link.addEventListener('click', () => {
                    newNav.classList.remove('active');
                    newMenuBtn.classList.remove('active');
                    // Restaurar scroll del body
                    toggleBodyScroll(false);
                });
            });
        }
    }
    
    // Ejecutar al cargar la página
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMenu);
    } else {
        initMenu();
    }
    
    // Ejecutar en cada navegación de Astro
    document.addEventListener('astro:page-load', initMenu);
    document.addEventListener('astro:after-swap', initMenu);
</script>

<style>
    header {
        background-color: var(--color-surface-base);
        padding: 1rem 0; /* Reducir padding para móviles */
        border-bottom: 1px solid var(--color-border);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .logo {
        font-weight: 700;
        font-size: 1.4rem; /* Reducir tamaño base para móviles */
        text-decoration: none;
        color: var(--color-text-base);
    }

    .logo .highlight {
        color: var(--color-primary);
    }

    .menu-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.25rem; /* Reducir padding para móviles */
        gap: 4px; /* Reducir gap */
    }

    .menu-toggle span {
        width: 24px; /* Reducir tamaño para móviles */
        height: 2.5px;
        background-color: var(--color-text-base);
        transition: all 0.3s ease-in-out;
        border-radius: 2px;
    }

    .menu-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px); /* Ajustar para el nuevo tamaño */
    }

    .menu-toggle.active span:nth-child(2) {
        opacity: 0;
    }

    .menu-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px); /* Ajustar para el nuevo tamaño */
    }

    nav {
        display: block;
    }
    
    /* Ocultar menú normal en tablets y móviles */
    @media (max-width: 1024px) {
        nav {
            display: none;
        }
    }

    nav ul {
        list-style: none;
        display: flex;
        align-items: center; /* Centrar verticalmente */
        gap: 1.5rem; /* Aumentar más el espaciado */
        margin: 0;
        padding: 0;
    }

    nav a {
        text-decoration: none;
        color: var(--color-text-muted);
        font-weight: 600;
        font-size: 1rem; /* Reducir tamaño de fuente */
        transition: color 0.3s, transform 0.3s;
        padding: 0.5rem 0;
        position: relative;
        white-space: nowrap; /* Evitar que el texto se divida */
    }

    nav a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--color-primary);
        transition: width 0.3s ease-in-out;
    }

    nav a:hover {
        color: var(--color-primary);
    }

    nav a:hover::after {
        width: 100%;
    }


    /* Responsive para pantallas grandes (desktop) */
    @media (min-width: 1025px) {
        header {
            padding: 1.5rem 0; /* Más padding en desktop */
        }
        
        .logo {
            font-size: 1.7rem; /* Tamaño completo en desktop */
        }
        
        .header-container {
            padding: 0 2rem; /* Más padding lateral en desktop */
        }
    }

    /* Responsive para tablets y móviles (usar menú hamburguesa) */
    @media (max-width: 1024px) {
        .header-container {
            padding: 0 1rem;
        }

        .menu-toggle {
            display: flex;
            z-index: 1001;
        }

        /* Cambiar color de la cruz cuando el menú está activo */
        .menu-toggle.active span {
            background-color: #FAFAFA; /* Color claro para contraste con el fondo oscuro */
        }

        .nav-menu {
            position: fixed; /* Usar fixed para cubrir toda la pantalla */
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(24, 24, 27, 0.95); /* Fondo oscuro semi-transparente */
            backdrop-filter: blur(8px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transform: translateX(100%); /* Empezar fuera de la pantalla */
            opacity: 0;
            visibility: hidden;
            transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1), opacity 0.4s;
            /* Prevenir scroll en el menú */
            overflow: hidden;
            touch-action: none;
        }

        .nav-menu.active {
            transform: translateX(0);
            opacity: 1;
            visibility: visible;
        }

        .nav-menu ul {
            flex-direction: column;
            gap: 2rem; /* Espaciado entre elementos del menú */
            padding: 0;
            text-align: center;
        }

        .nav-menu li {
            border: none;
        }

        .nav-menu a {
            display: block;
            padding: 1rem 2rem;
            color: #FAFAFA; /* Texto claro para contraste */
            font-size: 2rem; /* Letras grandes para el menú móvil */
            font-weight: 700;
            transition: color 0.3s, transform 0.3s;
        }

        .nav-menu a:hover {
            color: var(--color-primary);
            transform: scale(1.1);
        }
    }

    /* Responsive específico para tablets (768px - 1024px) */
    @media (min-width: 768px) and (max-width: 1024px) {
        .logo {
            font-size: 1.6rem; /* Tamaño intermedio para tablets */
        }
        
        .menu-toggle span {
            width: 26px; /* Tamaño intermedio para tablets */
            height: 2.5px;
        }
        
        .menu-toggle.active span:nth-child(1) {
            transform: rotate(45deg) translate(5.5px, 5.5px);
        }
        
        .menu-toggle.active span:nth-child(3) {
            transform: rotate(-45deg) translate(5.5px, -5.5px);
        }
        
        .nav-menu a {
            font-size: 1.75rem; /* Tamaño intermedio para tablets */
            padding: 1rem 2rem;
        }
        
        .nav-menu ul {
            gap: 1.75rem; /* Espaciado intermedio */
        }
    }

    /* Responsive para pantallas muy pequeñas (menores de 425px) */
    @media (max-width: 425px) {
        header {
            padding: 0.75rem 0; /* Reducir aún más el padding */
        }
        
        .header-container {
            padding: 0 0.75rem; /* Reducir padding lateral */
        }
        
        .logo {
            font-size: 1.2rem; /* Reducir el tamaño del logo */
            line-height: 1.2;
        }
        
        .menu-toggle {
            padding: 0.2rem; /* Reducir padding del botón */
        }
        
        .menu-toggle span {
            width: 20px; /* Hacer el menú hamburguesa más pequeño */
            height: 2px;
        }
        
        .menu-toggle.active span:nth-child(1) {
            transform: rotate(45deg) translate(4px, 4px);
        }
        
        .menu-toggle.active span:nth-child(3) {
            transform: rotate(-45deg) translate(4px, -4px);
        }
        
        .nav-menu a {
            font-size: 1.5rem; /* Reducir tamaño de fuente del menú */
            padding: 0.75rem 1.5rem; /* Reducir padding */
        }
        
        .nav-menu ul {
            gap: 1.5rem; /* Reducir espaciado entre elementos */
        }
    }
</style>